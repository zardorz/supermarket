<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_statement_header_day_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_column_left_line_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="00"
            android:textSize="40dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_statement_header_date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_column_left_line_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maio"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_column_left_line_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TerÃ§a"
                android:textSize="10dp" />


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_400"
        app:layout_constraintBottom_toBottomOf="@id/ll_statement_header_day_container"/>


</android.support.constraint.ConstraintLayout>