<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white">
    <!--android:background="@drawable/selector_item"-->

    <!--android:clickable="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDateDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="05"
                android:textColor="#0C4855"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvDateWeekName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Seg"
                android:textColor="#0C4855"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvItemDescription"
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0C4855"
                android:textSize="14sp"
                tools:text="Item description text" />

            <TextView
                android:id="@+id/tvItemCategoryName"
                style="@style/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0C4855"
                android:textSize="12sp"
                tools:text="Item detail text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="9.999.999,99"
                android:textColor="#0C4855"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvItemBalanceAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="9.999.999,99"
                android:textColor="#0C4855"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!--android:layout_toRightOf="@+id/imgItem"-->


</LinearLayout>
