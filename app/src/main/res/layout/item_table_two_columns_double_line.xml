<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:id="@+id/item_table_two_columns_double_line">

    <View
        android:id="@+id/separator_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray_200" />

    <LinearLayout
        android:id="@+id/ll_item_columns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_card_line_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="-3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_balance_wallet_black" />

        <LinearLayout
            android:id="@+id/ll_item_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_item_columns_line_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_column_left_line_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="column_left_text_line_01"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_column_right_line_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="column_right_text_line_01"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_item_columns_line_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_column_left_line_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="column_left_text_line_02"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_column_right_line_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="column_right_text_line_02"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>