<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shopping.ShoppingCheckOutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edItensQtdView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_weight="1"
            android:ellipsize="start"
            android:gravity="left"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edItensQtd"
                style="@style/text_view"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:hint="Qtd Itens"
                android:inputType="none"
                android:paddingTop="12dp"
                android:text="0"
                android:textIsSelectable="false"
                app:errorEnabled="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edAmountTotalView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_weight="1"
            android:ellipsize="start"
            android:gravity="left"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edAmountTotal"
                style="@style/text_view"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:hint="Valor Total"
                android:inputType="none"
                android:paddingTop="12dp"
                android:text="0,00"
                android:textIsSelectable="false"
                app:errorEnabled="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/edAmountDiscountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_weight="1"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edAmountDiscount"
                style="@style/text_view"
                android:hint="Valor do Desconto"
                android:inputType="numberDecimal"
                android:text="0,00"
                app:errorEnabled="true" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/edAmountPaidView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_weight="1"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edAmountPaid"
                style="@style/text_view"
                android:hint="Valor Pago"
                android:inputType="numberDecimal"
                android:text="0,00"
                app:errorEnabled="true" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle_solid"

                android:src="@drawable/ic_done_black_24dp" />

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle_solid_red"

                android:src="@drawable/ic_not_interested_black_24dp" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>