<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="1080"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="15">
    <!--Duration = 1 means that the rotation will be done in 1 second*-->
    <!--increase duration if you want to speed up the rotation*-->
    <!--android:toDegrees="360"    -->

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false" >
        <size
            android:height="12dip"
            android:width="12dip" />

        <gradient
            android:centerColor="#807e7e"
            android:centerY="0.50"
            android:endColor="#cacaca"
            android:startColor="#414140"
            android:type="sweep"
            android:useLevel="false" />

        <!--<gradient-->
        <!--android:centerColor="#f96047"-->
        <!--android:centerY="0.50"-->
        <!--android:endColor="#fb9c8d"-->
        <!--android:startColor="#f72d0c"-->
        <!--android:type="sweep"-->
        <!--android:useLevel="false" />-->
    </shape>

</rotate>